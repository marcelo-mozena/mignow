{
  "name": "template-electron",
  "version": "1.0.0",
  "description": "Electron app with React, TypeScript, shadcn/ui, Clean Architecture, and CQRS",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build && tsc -p tsconfig.node.json && electron-builder",
    "lint": "next lint",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && tsc -p tsconfig.node.json && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "file-saver": "^2.0.5",
    "input-otp": "^1.4.2",
    "inversify": "^6.0.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.331.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "reflect-metadata": "^0.2.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.1.0",
    "postcss": "^8.4.32",
    "shadcn": "^3.8.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.electron-app",
    "productName": "Electron React App",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
